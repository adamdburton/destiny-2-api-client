{
  "name": "adamdburton/destiny-2-api-client",
  "description": "PHP API client for Destiny 2",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "adamdburton",
      "email": "adam@burt0n.net"
    }
  ],
  "version": "v2-dev",
  "require": {
    "ext-zip": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "guzzlehttp/guzzle": "~6.0",
    "adbario/php-dot-notation": "^2.2",
    "illuminate/console": "5.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.2",
    "apigen/apigen": "dev-master",
    "roave/better-reflection": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "AdamDBurton\\Destiny2ApiClient\\": "lib"
    },
    "classmap": [
      "tests"
    ]
  },
  "scripts": {
    "apidocs": "vendor/bin/apigen generate ./lib --destination ./docs/api"
  },
  "extra": {
    "laravel": {
      "providers": [
        "AdamDBurton\\Destiny2ApiClient\\Laravel\\ServiceProvider"
      ],
      "aliases": {
        "Destiny": "AdamDBurton\\Destiny2ApiClient\\Laravel\\Facade"
      }
    }
  }
}
